<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style parent="Theme.AppCompat.Light.DarkActionBar" name="AppTheme">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

</style>
    <style parent="Theme.AppCompat.Light.Dialog" name="DatePickerDialogTheme">
    <item name="colorAccent">#ADC743</item>
</style>

    <style name="DialogThemeTime" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme1" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/accent_translucent</item>â€¨
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <style name="HeaderBar">
    <item name="android:background">@color/app_background</item>
    </style>


    <style parent="@android:style/Animation.Activity" name="CustomActivityAnimation">
    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
    <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Button">
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@drawable/primary_round</item>
    </style>


    <style name="DestructiveButton"
        parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
