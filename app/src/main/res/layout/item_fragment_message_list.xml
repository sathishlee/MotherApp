<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/ll_notify_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_margin="5dp"
        android:background="@color/secondary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_weight="15">


    <TextView
        android:id="@+id/message_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_label"
        android:text="Food Tips"
        android:layout_gravity="left"
        />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/message_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_secondary"
                        android:text="Take Food Regularly on time. Eat Healthy food. \n Eat more Fruits"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/notification_time"
                android:textSize="@dimen/text_secondary"
                android:text="1 hour age"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:srcCompat="@drawable/quantum_ic_keyboard_arrow_down_white_36"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_weight="5"
             />
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:background="@drawable/noti_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5.0dp"
        android:layout_weight="1.0"
        android:layerType="software" />

</LinearLayout>
