<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_tile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/ripple"
                android:textStyle="bold"
                android:textSize="@dimen/text_label"
                android:text="Food Tips"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/message_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/text_secondary"
                        android:text="Take Food Regularly on time. Eat Healthy food. \n Eat more Fruits"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/notification_time"
                android:textSize="@dimen/text_secondary"
                android:text="1 hour age"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:background="@drawable/noti_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5.0dp"
        android:layout_weight="1.0"
        android:layerType="software" />

</LinearLayout>
