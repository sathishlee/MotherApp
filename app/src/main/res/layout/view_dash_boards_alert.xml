<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_msg_welcome0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning Mrs."
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_label"
                    android:padding="5dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="4.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_gravity="center"
                android:background="@drawable/header_line"
                android:layout_width="match_parent"
                android:layout_height="5.0dp"
                android:layout_weight="1.0"
                android:layerType="software" />

        </LinearLayout>


        <TextView
        android:id="@+id/txt_msg_welcome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hope_you_are_doing_well"
        android:textSize="@dimen/text_label"
        android:textColor="@color/text_primary"
        android:padding="5dp"/>

        <TextView
        android:id="@+id/txt_msg_welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_is_your_12th_week_of_pregnancy"
        android:textSize="@dimen/text_label"
        android:padding="5dp"
        android:textColor="@color/text_primary"/>

       <!-- <TextView
        android:id="@+id/txt_msg_welcome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_is_the_period_of_child_monthly_development"
        android:textSize="@dimen/text_label"
        android:padding="5dp"
        android:textColor="@color/text_primary"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="80">

            <TextView
                android:id="@+id/txt_msg_welcome4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/if_you_are_not_feeling_well_please"
                android:textSize="@dimen/text_label"
                android:padding="5dp"
                android:layout_weight="27"
                android:textColor="@color/text_primary"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rel_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="end"
                android:gravity="end">

                <TextView
                    android:id="@+id/btn_click_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_here"
                    android:textSize="@dimen/text_label"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="end"/>
                </LinearLayout>

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="@string/ok"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:textSize="@dimen/text_label"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>