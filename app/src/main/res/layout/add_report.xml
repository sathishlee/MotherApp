<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="suthishan.navigationwithbottom.activity.AddRecords">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txt_title"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Visit Details"
       android:layout_gravity="center"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_title"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="144cm"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
             android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_below="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="O+ve"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
             android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_weight"
        android:layout_below="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_diabetic_level"
        android:layout_below="@+id/ll_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Diabetic Level"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cardiac"
        android:layout_below="@+id/ll_diabetic_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cardiac status"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bp"
        android:layout_below="@+id/ll_cardiac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Blood presure"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Systolic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="diastolic"/>

        </LinearLayout>
           </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hb"
        android:layout_below="@+id/ll_bp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hemoglobin"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ultrosonogram"
        android:layout_below="@+id/ll_hb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ultrasonogram"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="O+ve"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_secondary"
            android:layout_weight="1"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_ultrosonogram"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#1e8ffe"
            android:text="@string/submit"
            android:textColor="#ffffff"
            android:id="@+id/btn_submit"
            android:padding="10dp"/>

    </LinearLayout>
</ScrollView>
