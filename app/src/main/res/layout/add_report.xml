            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="RBS"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_secondary"
