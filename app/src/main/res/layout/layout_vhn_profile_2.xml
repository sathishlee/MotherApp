<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    android:orientation="vertical"
    android:padding="8.0dip"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="3.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="96.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="start"
                android:padding="12.0dip"
                android:contentDescription="@string/vhn"
                app:srcCompat="@drawable/ic_hospital" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:background="@color/green"
                android:gravity="center"
                android:padding="4.0dip"
                android:text="@string/call"
                android:textColor="@android:color/white"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:alpha="0.2"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="100.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Nin Number"
                android:textColor="@color/text_primary"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Facility Type"
                android:textColor="@color/text_primary"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="4.0dip"
                android:drawableStart="@drawable/ic_place_16dp"
                android:padding="4dp"
                android:text="Facility Name"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_place_16dp"
                android:padding="4dp"
                android:drawablePadding="4.0dip"
                android:text="Distance From you"
                android:textColor="@color/text_primary" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>