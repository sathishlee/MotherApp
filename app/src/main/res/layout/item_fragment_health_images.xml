<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">
                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/no_image"
                    app:srcCompat="@drawable/image_message"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_label"
                android:text="Message of Image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textSize="@dimen/text_label"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit,"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/notification_time"
                android:textSize="@dimen/text_secondary"
                android:text="1 hour age"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:background="@drawable/noti_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5.0dp"
        android:layout_weight="1.0"
        android:layerType="software" />

</LinearLayout>
